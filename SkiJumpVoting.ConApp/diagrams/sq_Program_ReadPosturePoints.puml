@startuml Program.ReadPosturePoints
title Program.ReadPosturePoints
participant "ReadPosturePoints(intcount)" as ReadPosturePoints_p0 #LightYellow
participant "Console.Write(a0)" as Console_Write_a0 #LightGreen
participant "Console.ReadLine()" as Console_ReadLine #LightGreen
participant "double.TryParse(a0,a1)" as double_TryParse_a0_a1 #LightGreen
participant "Console.WriteLine(a0)" as Console_WriteLine_a0 #LightGreen
autonumber
loop#LightCoral idx < count
    ReadPosturePoints_p0 -[#grey]> Console_Write_a0 : ($"Wertungsrichter {idx + 1} [0-20]: ")
    ReadPosturePoints_p0 -[#grey]> Console_ReadLine
    Console_ReadLine -[#blue]-> ReadPosturePoints_p0 : input
    alt#LightBlue double.TryParse(input, out result[idx]) 
                    && result[idx] >= 0 
                    && result[idx] <= 20 
                    && (result[idx] % 1 == 0 || result[idx] % 1 == 0.5)
        ReadPosturePoints_p0 -[#grey]> double_TryParse_a0_a1 : (input, out result[idx])
        double_TryParse_a0_a1 -[#blue]-> ReadPosturePoints_p0 : result
        else
            ReadPosturePoints_p0 -[#grey]> Console_WriteLine_a0 : ("Ung√ºltige Eingabe!")
    end
end
@enduml
